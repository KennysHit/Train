<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#252979FF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mticketview_trainno"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="G8541"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mticketview_isstart"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="10dp"
                android:background="#FF9100"
                android:gravity="center"
                android:text="始"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mticketview_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="成都东"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="至"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mticketview_isend"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="27dp"
                android:background="#FF9100"
                android:gravity="center"
                android:text="过"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mticketview_endstation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="简阳南"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mticketview_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="2020-01-01"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mticketview_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="08:09"
                android:textColor="#FF9100"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mticketview_costtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="0小时11分"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mticketview_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="08:02"
                android:textColor="#FF9100"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">


            <TextView
                android:id="@+id/mticketview_passenger"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="乘客: 呜呜呜" />

            <TextView
                android:id="@+id/mticketview_buytime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="2020-02-02 03:05:00"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>